# Web Application Configuration
WEB_URL=https://www.saucedemo.com

# API Configuration
API_URL=https://reqres.in/api

# API Authentication (optional - add if your API requires authentication)
# Option 1: API Key as X-API-Key header (most common)
# API_KEY=your-api-key-here

# Option 1b: Alternative - Use API_KEY_HEADER to store API key value
# API_KEY_HEADER=your-api-key-here

# Option 2: Bearer Token (if using API_TOKEN, API_KEY will be ignored)
# API_TOKEN=your-bearer-token-here

# Option 3: Custom header name (if both API_KEY and API_KEY_HEADER_NAME are set)
# API_KEY_HEADER_NAME=X-Custom-API-Key

# Browser Configuration
BROWSER=chromium
HEADED=false
HEADLESS=true

# Timeout Configuration (in milliseconds)
WAIT_FOR_TIMEOUT=10000
WAIT_FOR_ACTION=1000
TIMEOUT=30000

# Window Size
WINDOW_SIZE=1920x1080

# Test User Credentials (for SauceDemo)
# All users share the same password: secret_sauce
# These are test credentials, safe to commit
STANDARD_USER=standard_user
PROBLEM_USER=problem_user
LOCKED_OUT_USER=locked_out_user
PERFORMANCE_GLITCH_USER=performance_glitch_user
ERROR_USER=error_user
VISUAL_USER=visual_user
# Password for all users
PASSWORD=secret_sauce

# Allure Configuration
ALLURE_OUTPUT_DIR=./output/allure
